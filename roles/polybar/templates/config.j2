[colors]
background = #282a36
background-alt = #44475A
foreground = #f8f8f2
foreground-alt = #BD93F9
primary = #5AF78D
secondary = #FF5454
alert = #FF5555

[bar/bottom]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 31
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2 
line-color = #f00

border-size = 0 
border-color = #00000000

padding-left = 1
padding-right = 2

module-margin-left = 1
module-margin-right = 2

{% for font in polybar_fonts %}
font-{{ loop.index0 }} = {{ font }}
{% endfor %}

modules-left = {% for module in polybar_modules_left %}{{ module }} {% endfor %}

modules-center = {% for module in polybar_modules_center %}{{ module }} {% endfor %}

modules-right = {% for module in polybar_modules_right %}{{ module }} {% endfor %}


tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

bottom = true
locale = fr_FR.UTF-8

enable-ipc = true
{% for module in polybar_modules_left %}

{% include "modules/" + module + ".j2" %}

{% endfor %}

{% for module in polybar_modules_center %}

{% include "modules/" + module + ".j2" %}

{% endfor %}

{% for module in polybar_modules_right %}

{% include "modules/" + module + ".j2" %}

{% endfor %}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

